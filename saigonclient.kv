#:import ScreenManager kivy.uix.screenmanager.ScreenManager
#:import Screen kivy.uix.screenmanager.Screen


ScreenManager:
    board_screen: _board_screen
    vote_screen: _vote_screen
    wait_screen: _wait_screen

    BoardScreen:
        id: _board_screen
        name: "board_screen"

    VoteScreen:
        id: _vote_screen
        name: "vote_screen"

    WaitScreen:
        id: _wait_screen
        name: "wait_screen"

<BoardScreen@Screen>:
    board: _board
    team_label: _team_label

    BoxLayout:
        orientation: "vertical"

        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Codinomes'
                    on_press: root.manager.current = "vote_screen"
                ActionButton:
                    id: _team_label
                    text: "Equipe"

        Board:
            id: _board
            lines: 5
            cols: 5

<VoteScreen@Screen>:
    BoxLayout:
        orientation: "vertical"

        Button:
            text: "Outra palavra"
            on_press: root.manager.current = "board_screen"

        Button:
            text: "Passar"
            on_press: root.manager.current = "wait_screen"

<WaitScreen@Screen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Turno do outro time. Aguarde."

        Button:
            text: "Outra palavra"
            on_press: root.manager.current = "board_screen"

